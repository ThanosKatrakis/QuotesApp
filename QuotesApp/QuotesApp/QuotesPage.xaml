<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="QuotesApp.QuotesPage"
             Padding ="20"
             BackgroundColor="#2F2F2F">
    <ContentPage.Padding>
        <OnPlatform
            x:TypeArguments="Thickness"
            Android="20,30,20,20"
            WinPhone="20, 40, 20, 20">
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout>
        <Button
            Text="Next"
            Clicked="Button_Clicked"
            BackgroundColor="#6FABD9"/>
        <Label
            Text="{Binding
                Source={x:Reference slider},
                Path = Value,
                StringFormat='Font Size: {0:N0}'}"
            TextColor="#63B456"/>
        <Slider
            x:Name="slider"
            Maximum="50"
            Minimum="16"
            ThumbColor="#A27664"/>
        <Label
            x:Name="currenQuote"
            FontSize="{Binding
                Source={x:Reference slider},
                Path=Value}"
            TextColor="#63B456"/>
    </StackLayout>
</ContentPage>